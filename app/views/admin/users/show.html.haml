.container
  %h1 Show User
  %br

  %form.form-horizontal{ role: "form" }
    .form-group
      %label.col-sm-2.control-label Email
      .col-sm-6= @user.email
    .form-group
      %label.col-sm-2.control-label First Name
      .col-sm-6= @user.first_name
    .form-group
      %label.col-sm-2.control-label Last Name
      .col-sm-6= @user.last_name
    .form-group
      .col-sm-offset-2.col-sm-6
        = link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary'
        = link_to 'Back', admin_users_path, class: 'btn btn-default'
