.container
  = form_tag admin_sessions_path, { class: 'form-signin', role: 'form' } do
    %h2.form-signin-heading Please sign in
    = text_field_tag :email, nil, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true
    = password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true
    = submit_tag 'Sign In', class: 'btn btn-primary btn-block btn-lg'
